<!DOCTYPE html>
<html lang="en">

<head>
    <title>Department Information - EDUCATION MOODLE (Edu-Mo)</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            background-color: #f8f9fa;
        }

        .navbar {
            background-color: #007bff;
        }

        .navbar-brand,
        .navbar-nav .nav-link {
            color: #ffffff !important;
        }

        .bg-primary {
            background-color: #007bff !important;
            color: #ffffff;
        }

        .section-title {
            margin-top: 20px;
            margin-bottom: 10px;
            font-size: 1.5rem;
        }

        .section-content {
            border: 1px solid #dee2e6;
            padding: 15px;
            margin-bottom: 20px;
            background-color: #ffffff;
        }

        .section-content p {
            margin-bottom: 0;
        }

        .level-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .level-table th,
        .level-table td {
            border: 1px solid #dee2e6;
            padding: 8px;
            text-align: left;
        }
    </style>
</head>

<body>
    <form action="/adminSide/showDetails" method="POST">
        <div class="container">
            <div class="row bg-primary p-5 text-white">
                <div class="col-12">
                    <h1>Edu-Mo</h1>
                </div>
            </div>

            <div id="department-info" class="my-5">
                <div class="row bg-primary p-5 text-white">
                    <div class="col-12">
                        <h2>Department Information</h2>
                    </div>
                </div>

                <div class="section-content">
                    <h3 class="section-title">Total Teachers</h3>
                    <p>Total number of teachers: <% totalTeachers %></p>
                </div>

                <div class="section-content">
                    <h3 class="section-title">Total Students</h3>
                    <p>Total number of students: <% totalStudents %></p>
                </div>

                <div class="section-content">
                    <h3 class="section-title">Total Courses</h3>
                    <p>Total number of courses: <% totalCourses %></p>
                </div>

                <div class="section-content">
                    <h3 class="section-title">Total Course Offers</h3>
                    <p>Total number of course offers: <% totalCourseOffers %></p>
                </div>

                <div class="section-content">
                    <h3 class="section-title">Level-wise Information</h3>
                    <% for (let i = 1; i <= 8; i++) { %>
                        <h4>Level <%= i %></h4>
                        <table class="level-table">
                            <tr>
                                <th>Department</th>
                                <th>Total Students</th>
                                <th>Total Passed Students</th>
                            </tr>
                            <% departmentWiseInfo.forEach(department => { %>
                                <tr>
                                    <td><%- department.name %></td>
                                    <td><%- department.levelWiseInfo[i].totalStudents %></td>
                                    <td><%- department.levelWiseInfo[i].totalPassedStudents %></td>
                                </tr>
                            <% }); %>
                        </table>
                    <% } %>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Back</button>
            </div>
            <input type="hidden" name="userId" value="<%= userId %>">
        </div>
    </form>
</body>

</html>
