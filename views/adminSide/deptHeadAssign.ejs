<!DOCTYPE html>
<html lang="en">

<head>
    <title>Add Course - EDUCATION MOODLE (Edu-Mo)</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <!-- Bootstrap Select Picker CSS-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- Bootstrap JS--> 
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.bundle.min.js"></script>
    <!-- Bootstrap Select Picker JS--> 
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.14.0-beta2/js/bootstrap-select.min.js"></script>

    <style>
        body {
            font-family: 'Nunito', 'sans-serif';
            background-color: #f4f7fc;
            color: #09090a;
        }
        .navbar {
            background-color: whitesmoke;
        }
        .navbar-brand,
        .navbar-nav .nav-link {
            color: rgb(230, 115, 8);
            /* Black color for nav link */
            text-align: left;
        }
        .navbar-light .navbar-nav .nav-link {
            color: rgb(230, 115, 8);
            /* Black color for nav link */
            text-align: left;
        }
        .navbar-light .navbar-nav .nav-link:hover {
            color: #2319d9;
            /* Darker color on hover */
        }
        .navbar-nav .nav-link {
            font-size: 21px;
        }
        .bg-primary {
            background-color: #007bff !important;
        }
        .form-container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
        }
        .form-control {
            border-radius: 5px;
        }
        .btn-outline-secondary {
            color: #007bff;
            border-color: #007bff;
        }
        .btn-outline-secondary:hover {
            color: #ffffff;
            background-color: #007bff;
            border-color: #007bff;
        }
        /* Adjusted layout */
        .enrollment-part {
            padding-top: 20px;
        }
        .header-title {
            margin-bottom: 20px;
        }
        .custom-table {
            margin-bottom: 20px;
        }
        .custom-table th {
            font-size: 21px;
            /* Increase the font size to your desired value */
        }
        .custom-table td {
            font-size: 21px;
            /* Increase the font size to your desired value */
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="row bg-primary p-3 text-white">
            <div class="col-12">
                <h1 class="text-center">Edu-Mo</h1>
            </div>
        </div>

        <div class="row mt-3">
            <!-- Sidebar -->
            <div class="col-lg-3">
                <!-- Sidebar -->
                <nav class="navbar navbar-expand-sm navbar-light">
                    <div class="container-fluid">
                        <ul class="navbar-nav flex-column">
                            <!-- Add Section with corrected IDs -->
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="collapse" href="#addOptions">Add</a>
                                <div class="collapse" id="addOptions">
                                    <ul class="navbar-nav flex-column ms-3">
                                        <li class="nav-item">
                                            <a class="nav-link" href="/adminSide/addTeacher?userId=<%= userId %>">Add Teacher</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/adminSide/addStudent?userId=<%= userId %>">Add Student</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/adminSide/addDepartment?userId=<%= userId %>">Add Department</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/adminSide/addCourse?userId=<%= userId %>">Add Course</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/adminSide/addHall?userId=<%= userId %>">Add Hall</a>
                                        </li>
                                    </ul>
                                </div>
                            </li>

                            <!-- Show Information Section with unique ID -->
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="collapse" href="#showOptions">Show Information</a>
                                <div class="collapse" id="showOptions">
                                    <ul class="navbar-nav flex-column ms-3">
                                        <li class="nav-item">
                                            <a class="nav-link" href="/adminSide/showDepartment?userId=<%= userId %>">Show Department Information</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/adminSide/showCourse?userId=<%= userId %>">Show Course Information</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/adminSide/showStudentInfo?userId=<%= userId %>">Show Student Information</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/adminSide/showTeacherInfo?userId=<%= userId %>">Show Teacher Information</a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            <!-- Other nav items -->
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="collapse" href="#checkOptions">Check Details</a>
                                <div class="collapse" id="checkOptions">
                                    <ul class="navbar-nav flex-column ms-3">
                                        <li class="nav-item">
                                            <a class="nav-link" href="/adminSide/showDepartment?userId=<%= userId %>">Check Department</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/adminSide/showCourse?userId=<%= userId %>">Check Max Enrollment</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/adminSide/showStudentInfo?userId=<%= userId %>">Check Valid Teaches Entry</a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/adminSide/offerCourse?userId=<%= userId %>">Course Offer</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/adminSide/courseAssign?userId=<%= userId %>">Course Assign</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
            <div class="col-lg-9 enrollment-part">
                <!-- Content for the enrollment part goes here -->
                <h2 class="header-title text-center" style="background-color: #007bff; color: #ffffff;">Offered Courses-Mark Assign</h2>
                <div class="my-5 form-container">
                    <form id="course-selection-form" action="/adminSide/deptHeadAssign" method="POST">
                       
                        <div class="mb-3">
                            <label for="teachers" class="form-label">Teacher Name</label>
                            <select class="selectpicker form-select" id="teachers" name="teachers" >
                                <% if (data && data.length > 0) { %>
                                    <% data.forEach(row => { %>
                                        <option ><%= row.TEACHER_NAME %></option>
                                    <% }); %>
                                <% } else { %>
                                    <option value="" disabled>No teacher found</option>
                                <% } %>
                            </select>
                        </div>
                        <input type="hidden" name="userId" value="<%= userId %>">
                        <input type="hidden" name="deptName" value="<%= deptName %>">
                      
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
<script>
    $(document).ready(function() {
        $('.selectpicker').selectpicker();
    });
</script>
</body>
</html>