<!DOCTYPE html>
<html lang="en">

<head>
    <title>Department Information - EDUCATION MOODLE (Edu-Mo)</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            background-color: #f8f9fa;
        }

        .navbar {
            background-color: #007bff;
        }

        .navbar-brand,
        .navbar-nav .nav-link {
            color: #ffffff !important;
        }

        .bg-primary {
            background-color: #007bff !important;
            color: #ffffff;
        }

        .section-title {
            margin-top: 20px;
            margin-bottom: 10px;
            font-size: 1.5rem;
        }

        .section-content {
            border: 1px solid #dee2e6;
            padding: 15px;
            margin-bottom: 20px;
            background-color: #ffffff;
        }

        .section-content p {
            margin-bottom: 0;
        }

        .level-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .level-table th,
        .level-table td {
            border: 1px solid #dee2e6;
            padding: 8px;
            text-align: left;
        }
    </style>
</head>

<body>
    <form action="/adminSide/showDetails" method="POST">
        <div class="container">
            <div class="row bg-primary p-5 text-white">
                <div class="col-12">
                    <h1>Edu-Mo</h1>
                </div>
            </div>

            <div id="department-info" class="my-5">
                <div class="row bg-primary p-5 text-white">
                    <div class="col-12">
                        <h2>Statistics</h2>
                    </div>
                </div>

                <div class="section-content">
                    <h3 class="section-title">Teacher</h3>
                    <table class="table custom-table">
                        <thead>
                            <tr>
                                <th>Department Name</th>
                                <th>Teachers</th>
                                <th>Percentage</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (data2 && data2.length> 0) { %>
                                <% data2.forEach(info=> { %>
                                    <tr>
                                        <td>
                                            <%= info.DEPT_NAME %>
                                        </td>
                                        <td>
                                            <%= info.TTEACHER %>
                                        </td>
                                        <td>
                                            <%= info.PERCENTAGE %>
                                        </td>
                                    </tr>
                                    <% }); %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="6">No teacher found</td>
                                            </tr>
                                            <% } %>
                             </tr>
                        </tbody>
                    </table>
                </div>

                <div class="section-content">
                    <h3 class="section-title">Student</h3>
                    <table class="table custom-table">
                        <thead>
                            <tr>
                                <th>Department Name</th>
                                <th>Students</th>
                                <th>Percentage</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (data && data.length> 0) { %>
                                <% data.forEach(info=> { %>
                                    <tr>
                                        <td>
                                            <%= info.DEPT_NAME %>
                                        </td>
                                        <td>
                                            <%= info.TSTUDENT %>
                                        </td>
                                        <td>
                                            <%= info.PERCENTAGE %>
                                        </td>
                                    </tr>
                                    <% }); %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="6">No student found</td>
                                            </tr>
                                            <% } %>
                             </tr>
                        </tbody>
                    </table>
                </div>

                <div class="section-content">
                    <h3 class="section-title">Course</h3>
                    <table class="table custom-table">
                        <thead>
                            <tr>
                                <th>Department Name</th>
                                <th>Course</th>
                                <th>Percentage</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (data3 && data3.length> 0) { %>
                                <% data3.forEach(info=> { %>
                                    <tr>
                                        <td>
                                            <%= info.DEPT_NAME %>
                                        </td>
                                        <td>
                                            <%= info.TCOURSE %>
                                        </td>
                                        <td>
                                            <%= info.PERCENTAGE %>
                                        </td>
                                    </tr>
                                    <% }); %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="6">No course found</td>
                                            </tr>
                                            <% } %>
                             </tr>
                        </tbody>
                    </table>
                </div>

                <div class="section-content">
                    <h3 class="section-title">Course Offer</h3>
                    <table class="table custom-table">
                        <thead>
                            <tr>
                                <th>Department Name</th>
                                <th>Course</th>
                                <th>Percentage</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (data4 && data4.length> 0) { %>
                                <% data4.forEach(info=> { %>
                                    <tr>
                                        <td>
                                            <%= info.DEPT_NAME %>
                                        </td>
                                        <td>
                                            <%= info.TCOURSE %>
                                        </td>
                                        <td>
                                            <%= info.PERCENTAGE %>
                                        </td>
                                    </tr>
                                    <% }); %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="6">No offered course found</td>
                                            </tr>
                                            <% } %>
                             </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <input type="hidden" name="userId" value="<%= userId %>">
        </div>
    </form>
</body>

</html>