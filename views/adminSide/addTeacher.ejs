<!DOCTYPE html>
<html lang="en">

<head>
    <title>Add Teacher - EDUCATION MOODLE (Edu-Mo)</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            font-family: 'Nunito', 'sans-serif';
            background-color: #f4f7fc;
            color: #09090a;
        }

        .navbar {
            background-color: #007bff;
        }

        .navbar-brand,
        .navbar-nav .nav-link {
            color: #ffffff !important;
        }

        .bg-primary {
            background-color: #007bff !important;
            color: #ffffff;
        }

        .form-container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
          
        }

        .form-control {
            border-radius: 5px;
        }

        .btn-outline-secondary {
            color: #007bff;
            border-color: #007bff;
        }

        .btn-outline-secondary:hover {
            color: #ffffff;
            background-color: #007bff;
            border-color: #007bff;
        }
    </style>
</head>

<body>
    

    <div class="container">
        <div class="row bg-primary p-3 text-white">
            <div class="col-12">
                <h1 class="text-center">Edu-Mo</h1>
            </div>
        </div>

        <div id="add-teacher" >
            <div class="row bg-primary p-3 text-white">
                <div class="col-12">
                    <h2 class="text-center">Add Teacher</h2>
                </div>
            </div>

            <!-- Add Teacher Form Section -->
            <div class="my-5 form-container">
                <form action="/adminSide/addTeacher" method="POST">
                    <div class="mb-3">
                        <label for="teacherId" class="form-label">Teacher ID</label>
                        <input type="text" class="form-control" id="teacherId" name="teacherId" required>
                    </div>
                    <div class="mb-3">
                        <label for="teacherName" class="form-label">Teacher Name</label>
                        <input type="text" class="form-control" id="teacherName" name="teacherName" required>
                    </div>
                    <div class="mb-3">
                        <label for="deptName" class="form-label">Department Name</label>
                        <select class="form-select" id="deptName" name="deptName" required>
                            <option value="" disabled selected>Select Department</option>
                            <% AllDeptNameInfo.forEach(row => { %>
                                <option value="<%= row.DEPT_NAME %>"><%= row.DEPT_NAME %></option>
                            <% }); %>
                            <!-- Department options will be dynamically populated by JavaScript -->
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="designation" class="form-label">Designation</label>
                        <select class="form-select" id="designation" name="designation" required>
                            <option value="" disabled selected>Select Designation</option>
                            <!-- Designation options will be dynamically populated by JavaScript -->
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>

                    <!-- Add more form elements as needed -->
                    <input type="hidden" name="userId" value="<%= userId %>">
                    <div class="small-box">
                        <button type="submit" class="btn btn-outline-secondary ">Add Teacher</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Function to populate department options
     

        // Call functions to populate options when the DOM is loaded
       

        // Function to populate designation options
        function populateDesignations() {
            // Dummy data for demonstration
            const designations = ['Professor', 'Assistant Professor', 'Lecturer', 'Assistant Lecturer', 'Teacher'];
            const designationSelect = document.getElementById('designation');
            designations.forEach(designation => {
                const option = document.createElement('option');
                option.textContent = designation;
                designationSelect.appendChild(option);
            });
        }

        // Call functions to populate options when the DOM is loaded
        document.addEventListener('DOMContentLoaded', () => {
           // populateDepartments();
            populateDesignations();
        });
    </script>
</body>

</html>
