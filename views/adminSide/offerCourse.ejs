<!DOCTYPE html>
<html lang="en">
<head>
    <title>Offer Course - EDUCATION MOODLE (Edu-Mo)</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            font-family: 'Nunito', 'sans-serif';
            background-color: #f4f7fc;
            color: #09090a;
        }
        .navbar {
            background-color: #007bff;
        }
        .navbar-brand, .navbar-nav .nav-link {
            color: #ffffff !important;
        }
        .bg-primary {
            background-color: #007bff !important;
            color: #ffffff;
        }
        .form-container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
        }
        .form-control, .form-select {
            border-radius: 5px;
        }
        .btn-outline-secondary {
            color: #007bff;
            border-color: #007bff;
        }
        .btn-outline-secondary:hover {
            color: #ffffff;
            background-color: #007bff;
            border-color: #007bff;
        }
        .custom-checkbox {
            cursor: pointer;
            margin-right: 10px;
        }
        .hidden {
            display: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row bg-primary p-3 text-white">
            <div class="col-12">
                <h1 class="text-center">Edu-Mo</h1>
            </div>
        </div>
        <div id="offer-course" >
            <div class="row bg-primary p-3 text-white">
                <div class="col-12">
                    <h2 class="text-center">Offer Course</h2>
                </div>
            </div>
        <div id="offer-course" class="mt-4">
            <div class="my-5 form-container">
                <form id="offer-course-form" action="/adminSide/offerCourse" method="POST">
                    <div class="mb-3">
                        <label for="semester" class="form-label">Semester</label>
                        <select class="form-select" id="semester" name="semester" required onchange="checkSelection()">
                            <option value="">Select Semester</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <!-- Options will be dynamically loaded or hard-coded here -->
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="department" class="form-label">Department</label>
                        <select class="form-select" id="department" name="department" required onchange="checkSelection()">
                            <option value="">Select Department</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <!-- Options will be dynamically loaded or hard-coded here -->
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="level" class="form-label">Level</label>
                        <select class="form-select" id="level" name="level" required onchange="checkSelection()">
                            <option value="">Select Level</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="term" class="form-label">Term</label>
                        <select class="form-select" id="term" name="term" required onchange="checkSelection()">
                            <option value="">Select Term</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                        </select>
                    </div>
                </form>
                
                <div id="course-table" class="hidden">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Course Name</th>
                                <th scope="col">Offer</th>
                            </tr>
                        </thead>
                        <tbody id="course-list">
                            <!-- Courses will be populated here -->
                        </tbody>
                    </table>
                </div>
                <!-- Submit button for courses -->
                <button id="submit-courses-btn" class="btn btn-outline-secondary hidden" onclick="submitCourses()">Submit</button>
            </div>
        </div>
    </div>

    <script>
        function checkSelection() {
            const semester = document.getElementById('semester').value;
            const department = document.getElementById('department').value;
            const level = document.getElementById('level').value;
            const term = document.getElementById('term').value;

            if (semester !== "" && department !== "" && level !== "" && term !== "") {
                showCourses();
            }
        }

        function showCourses() {
            // Assuming courses data will be fetched based on the selections.
            // This is a static example; replace with dynamic data fetching as needed.
            const courses = [
                { id: 1, name: 'Introduction to Computer Science' },
                { id: 2, name: 'Advanced Database Systems' },
                { id: 3, name: 'Machine Learning 101' },
            ];

            const courseList = document.getElementById('course-list');
            courseList.innerHTML = ''; // Clear existing courses

            courses.forEach((course, index) => {
                const row = `
                    <tr>
                        <th scope="row">${index + 1}</th>
                        <td>${course.name}</td>
                        <td><input type="checkbox" class="custom-checkbox"></td>
                    </tr>
                `;
                courseList.innerHTML += row;
            });

            document.getElementById('course-table').classList.remove('hidden');
            document.getElementById('submit-courses-btn').classList.remove('hidden');
        }

        function submitCourses() {
            // Add your code here to handle the submission of selected courses
            console.log('Courses submitted!');
        }
    </script>
</body>
</html>
