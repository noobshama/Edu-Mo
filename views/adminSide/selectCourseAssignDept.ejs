<!DOCTYPE html>
<html lang="en">
<head>
    <title>Add Course Assign - EDUCATION MOODLE (Edu-Mo)</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <!-- Bootstrap Select Picker CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />
    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.bundle.min.js"></script>
    <!-- Bootstrap Select Picker JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.14.0-beta2/js/bootstrap-select.min.js"></script>
    <style>
        body {
            font-family: 'Nunito', 'sans-serif';
            background-color: #f4f7fc;
            color: #09090a;
        }
        .navbar, .bg-primary, .btn-primary {
            background-color: #0056b3; /* Darker shade for better contrast */
            color: #ffffff;
        }
        .form-control, .form-select, .selectpicker {
            border-radius: 0.25rem;
            border: 1px solid #ced4da;
            width: 100%; /* Ensure the select picker box takes up full width */
        }
        .form-label {
            color: #495057;
        }
        .btn-primary {
            border-color: #004085;
            color: #fff;
            font-size: 1rem;
            padding: 0.375rem 0.75rem;
            transition: background-color 0.15s ease-in-out, border-color 0.15s ease-in-out;
        }
        .btn-primary:hover {
            background-color: #003675;
            border-color: #002752;
        }
        .form-container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
        }
        .selectpicker .btn {
            border: 1px solid #ced4da;
            width: 100%; /* Ensure the select picker button takes up full width */
            text-align: left; /* Align text to the left within the button */
        }
        .btn-outline-secondary {
            color: #007bff;
            border-color: #007bff;
        }

        .btn-outline-secondary:hover {
            color: #ffffff;
            background-color: #007bff;
            border-color: #007bff;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row bg-primary p-3 text-white">
            <div class="col-12">
                <h1 class="text-center">Edu-Mo</h1>
            </div>
        </div>

        <div id="add-teacher" >
            <div class="row bg-primary p-3 text-white">
                <div class="col-12">
                    <h2 class="text-center">Course Assign</h2>
                </div>
            </div>
            <!-- Add Course Form Section -->
            <div class="my-5 form-container">
                <form action="/adminSide/courseAssign" method="POST">
                    <div class="mb-3">
                        <label for="deptName" class="form-label">Department Name</label>
                        <select class="selectpicker form-select" id="deptName" name="deptName">
                            <option value="" disabled selected>Select Department</option>
                            <% AllDeptNameInfo.forEach(row => { %>
                                <option value="<%= row.DEPT_NAME %>"><%= row.DEPT_NAME %></option>
                            <% }); %>
                        </select>
                    </div>
                    <input type="hidden" name="userId" value="<%= userId %>">
                    <!-- Button initially hidden -->
                    
                </form>
            <div class="col-12">
                <nav class="navbar navbar-expand-sm bg-light navbar-light">
                    <div class ="container-fluid">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <button class="nav-link btn btn-outline-secondary btn-sm" onclick="navigateToNext()">
                                    <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                                    Next
                                </button>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    </div>

    <script>
        function navigateToNext() {
            var deptName = document.getElementById('deptName').value;
            if (deptName) {
                var userId = '<%= userId %>';
                var url = "/adminSide/courseAssign?userId=" + userId + "&deptName=" + deptName;
                window.location.href = url;
            } else {
                alert("Please select a department.");
            }
        }
        // Show button if department is selected
        $('#deptName').on('change', function() {
            if ($(this).val()) {
                $('#next-btn').removeClass('d-none');
            } else {
                $('#next-btn').addClass('d-none');
            }
        });
        $(document).ready(function() {
            $('.selectpicker').selectpicker();
        });
    </script>
     <input type="hidden" name="userId" value="<%= userId %>">
</body>
</html>
