<!DOCTYPE html>
<html lang="en">

<head>
    <title>Login - Edu-Mo</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .eye-icon {
            width: 20px;
            height: 20px;
            cursor: pointer;
        }
    </style>
    <script>
        function togglePassword() {
            var passwordInput = document.getElementById("password");
            var eyeIcon = document.getElementById("eye-icon");

            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                eyeIcon.src = "eye-icon.png"; // Replace with your image path
            } else {
                passwordInput.type = "password";
                eyeIcon.src = "eye-icon-close.png"; // Replace with your image path
            }
        }
        console.log('JavaScript code loaded');
        function submitForm(event) {
            event.preventDefault();
            console.log('submitForm function called');
            var userId = document.getElementById("userId").value;
            var password = document.getElementById("password").value;
            fetch('/login', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ userId: userId, password: password })
            })
                .then(response => {
                    if (response.ok) {
                        // If login is successful, redirect to the appropriate page
                        return response.json().then(data => {
                            if (data.role === 'student') {
                                window.location.href = `/studentSide/studentHome?userId=${data.userId}`;
                            } else if (data.role === 'teacher') {
                                window.location.href = `/teacherSide/teacherHome?userId=${data.userId}`;
                            } else if (data.role === 'admin') {
                                window.location.href = `/adminSide/adminHome?userId=${data.userId}`;
                            }
                        });
                    } else {
                        // If login is unsuccessful, display error message
                        return response.json().then(data => {
                            var errorMessage = document.getElementById("errorMessage");
                            errorMessage.textContent = "Invalid user ID or password. Please try again.";
                            errorMessage.classList.remove("d-none"); // Show the error message div
                        });
                    }
                })
                .catch(error => {
                    var errorMessage = document.getElementById("errorMessage");
                    errorMessage.textContent = "Invalid user ID or password. Please try again.";
                    errorMessage.classList.remove("d-none"); // Show the error message div
                    return;
                });




            // if (userId !== "validUser" || password !== "validPassword") {
            //     var errorMessage = document.getElementById("errorMessage");
            //     errorMessage.textContent = "Invalid user ID or password. Please try again.";
            //     errorMessage.classList.remove("d-none"); // Show the error message div
            //     return; // Stop form submission
            // }
            console.log('Form submitted');
            document.getElementById("loginForm").submit();
        }
    </script>
</head>

<body>

    <div class="container">
        <div class="row bg-primary p-5 text-white">
            <div class="col-12">
                <h1>Edu-Mo</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <nav class="navbar navbar-expand-sm bg-light navbar-light">
                    <div class="container-fluid">
                        <ul class="navbar-nav">
                            <!-- <li class="nav-item">
                                <a class="nav-link" href="login.html">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="register.html">Register</a>
                            </li> -->
                            <li class="nav-item">
                                <a class="nav-link" href="/contact">Contact Us</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <h2 class="text-center mb-4">Login</h2>
                    <div id="errorMessage" class="alert alert-danger d-none" role="alert"></div>
                    <form id="loginForm" action="/login" method="post">
                        <div class="mb-3">
                            <label for="userId" class="form-label">User Name:</label>
                            <input type="text" class="form-control" id="userId" name="userId" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password:</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="password" name="password" required>
                                <button type="button" class="btn btn-outline-secondary" onclick="togglePassword()">
                                    <img id="eye-icon" src="eye-icon-closed.png" alt="Eye Icon" class="eye-icon">
                                </button>
                            </div>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="rememberMe">
                            <label class="form-check-label" for="rememberMe">Remember me</label>
                        </div>
                        <button type="button" class="btn btn-primary" onclick="submitForm(event)">Submit</button>
                        <p class="mt-2">Forgot your password? <a href="#">Reset here</a></p>
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>

</html>