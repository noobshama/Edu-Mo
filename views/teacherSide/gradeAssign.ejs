<!DOCTYPE html>
<html lang="en">

<head>
    <title>Add Student - EDUCATION MOODLE (Edu-Mo)</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            font-family: 'Nunito', 'sans-serif';
            background-color: #f4f7fc;
            color: #09090a;
        }

        .navbar {
            background-color: whitesmoke;
        }

        .navbar-brand,
        .navbar-nav .nav-link {
            color: rgb(230, 115, 8);
            /* Black color for nav link */
            text-align: left;
        }

        .navbar-light .navbar-nav .nav-link {
            color: rgb(230, 115, 8);
            /* Black color for nav link */
            text-align: left;
        }

        .navbar-light .navbar-nav .nav-link:hover {
            color: #2319d9;
            /* Darker color on hover */
        }

        .navbar-nav .nav-link {
            font-size: 21px;
        }

        .bg-primary {
            background-color: #007bff !important;
        }

        .form-container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
        }

        .form-control {
            border-radius: 5px;
        }

        .btn-outline-secondary {
            color: #007bff;
            border-color: #007bff;
        }

        .btn-outline-secondary:hover {
            color: #ffffff;
            background-color: #007bff;
            border-color: #007bff;
        }

        /* Adjusted layout */
        .enrollment-part {
            padding-top: 20px;
        }

        .header-title {
            margin-bottom: 20px;
        }

        .custom-table {
            margin-bottom: 20px;
        }

        .custom-table th {
            font-size: 21px;
            /* Increase the font size to your desired value */
        }

        .custom-table td {
            font-size: 21px;
            /* Increase the font size to your desired value */
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="row bg-primary p-3 text-white">
            <div class="col-12">
                <h1 class="text-center">Edu-Mo</h1>
            </div>
        </div>

        <div class="row mt-3">
            <!-- Sidebar -->
            <div class="col-lg-3">
                <nav class="navbar navbar-expand-sm navbar-light">
                    <div class="container-fluid">
                        <ul class="navbar-nav flex-column">
                            <!-- Add Section with corrected IDs -->
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="collapse" href="#personalOptions">Information</a>
                                <div class="collapse" id="personalOptions">
                                    <ul class="navbar-nav flex-column ms-3">
                                        <li class="nav-item">
                                            <a class="nav-link" href="/teacherSide/personalInfo?userId=<%= userId %>">Personal Information</a> 
                                        </li>
                                        
                                    </ul>
                                </div>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="collapse" href="#courseOptions">Pending Course Registration</a>
                                <div class="collapse" id="courseOptions">
                                    <ul class="navbar-nav flex-column ms-3">
                                        <li class="nav-item">
                                            <a class="nav-link" href="/teacherSide/courseApproval?userId=<%= userId %>">Course</a> 
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/teacherSide/levelWiseCourseApproval?userId=<%= userId %>">Level / Term</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/teacherSide/studentWiseCourseApproval?userId=<%= userId %>">Student</a>
                                        </li>
                                    </ul>
                                </div>
                            </li>

                            <!-- Show Information Section with unique ID -->
                           
                            <!-- Other nav items -->
                           
                           
                        </ul>
                    </div>
                </nav>
            </div>
            <div class="col-lg-9 enrollment-part">
                <!-- Content for the enrollment part goes here -->
                <h2 class="header-title text-center" style="background-color: #007bff; color: #ffffff;">Result Publish</h2>
                <form id="course-selection-form" action="/teacherSide/gradeAssign" method="POST">
                    <table class="table custom-table">
                        <thead>
                            <tr>
                                <th>Student Roll</th>
                                <th>Level</th>
                                <th>Term</th>
                                <th>Department</th>
                                <th>Course Code</th>
                                <th>Title</th>
                                <th>Grade</th>

                            </tr>
                        </thead>
                        <tbody>
                            <% if (data && data.length> 0) { %>
                                <% data.forEach(grade=> { %>
                            <tr>
                                <td><%= grade.USER_ID %></td>
                                <td><%= grade.LEVEL %></td>
                                <td><%= grade.TERM %></td>
                                <td><%= grade.DEPT_NAME %></td>
                                <td><%= grade.COURSE_CODE %></td>
                                <td><%= grade.TITLE %></td>
                                <td>
                                    <input type="text" class="form-control approve-textbox" value="" style="display: none;">
                                    <input type="number" class="form-control approve-textbox" id="grade" name="grade" data-userroll="<%= grade.USER_ID %>" data-coursecode="<%= grade.COURSE_CODE %>" placeholder="Enter The Grade">


                                </td>
                            </tr>
                            <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="6">No courses available</td>
                                    </tr>
                                    <% } %>
                                        </tr>

                        </tbody>
                    </table>
                    <input type="hidden" name="userId" value="<%= userId %>">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>

        </div>
       
    </div>
    <script>
       document.addEventListener("DOMContentLoaded", function() {
    const form = document.getElementById("course-selection-form");

    form.addEventListener("submit", function(event) {
        event.preventDefault(); // Prevent default form submission behavior

        // Collect all grade inputs
        const grades = document.querySelectorAll("#grade");

        // Create an array to store userId, grade, and courseCode
        const userGrades = [];

        // Iterate over each grade input and collect its value along with userId and courseCode
        grades.forEach(function(grade) {
            const userRoll = grade.dataset.userroll; // Get userId associated with this grade
            const courseCode = grade.dataset.coursecode; // Get course_code associated with this grade
            userGrades.push({ userRoll: userRoll, grade: grade.value, courseCode: courseCode });
        });

        // Send userId, grade, and courseCode data to the backend using AJAX
        fetch("/teacherSide/gradeAssign", {
            method: "POST",
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify({ userGrades: userGrades })
        })
        .then(response => response.json())
        .then(data => {
            console.log(data); // Handle response from the server
        })
        .catch(error => {
            console.error("Error:", error);
        });
    });
});
    </script>
    
</body>

</html>
