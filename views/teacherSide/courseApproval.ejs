<!DOCTYPE html>
<html lang="en">

<head>
    <title>Add Student - EDUCATION MOODLE (Edu-Mo)</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            font-family: 'Nunito', 'sans-serif';
            background-color: #f4f7fc;
            color: #09090a;
        }

        .navbar {
            background-color: whitesmoke;
        }

        .navbar-brand,
        .navbar-nav .nav-link {
            color: rgb(230, 115, 8);
            /* Black color for nav link */
            text-align: left;
        }

        .navbar-light .navbar-nav .nav-link {
            color: rgb(230, 115, 8);
            /* Black color for nav link */
            text-align: left;
        }

        .navbar-light .navbar-nav .nav-link:hover {
            color: #2319d9;
            /* Darker color on hover */
        }

        .navbar-nav .nav-link {
            font-size: 21px;
        }

        .bg-primary {
            background-color: #007bff !important;
        }

        .form-container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
        }

        .form-control {
            border-radius: 5px;
        }

        .btn-outline-secondary {
            color: #007bff;
            border-color: #007bff;
        }

        .btn-outline-secondary:hover {
            color: #ffffff;
            background-color: #007bff;
            border-color: #007bff;
        }

        /* Adjusted layout */
        .enrollment-part {
            padding-top: 20px;
        }

        .header-title {
            margin-bottom: 20px;
        }

        .custom-table {
            margin-bottom: 20px;
        }

        .custom-table th {
            font-size: 21px;
            /* Increase the font size to your desired value */
        }

        .custom-table td {
            font-size: 21px;
            /* Increase the font size to your desired value */
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="row bg-primary p-3 text-white">
            <div class="col-12">
                <h1 class="text-center">Edu-Mo</h1>
            </div>
        </div>

        <div class="row mt-3">
            <!-- Sidebar -->
            <div class="col-lg-3">
                <nav class="navbar navbar-expand-sm navbar-light">
                    <div class="container-fluid">
                        <ul class="navbar-nav flex-column">
                            <!-- Add Section with corrected IDs -->
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="collapse" href="#personalOptions">Information</a>
                                <div class="collapse" id="personalOptions">
                                    <ul class="navbar-nav flex-column ms-3">
                                        <li class="nav-item">
                                            <a class="nav-link" href="/teacherSide/personalInfo?userId=<%= userId %>">Personal Information</a>
                                        </li>
                                    </ul>
                                </div>
                            </li>

                            <!-- Show Information Section with unique ID -->

                            <!-- Other nav items -->
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="collapse" href="#courseOptions">Pending Course Registration</a>
                                <div class="collapse" id="courseOptions">
                                    <ul class="navbar-nav flex-column ms-3">
                                        <li class="nav-item">
                                            <a class="nav-link" href="/teacherSide/levelWiseCourseApproval?userId=<%= userId %>">Level / Term</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/teacherSide/studentWiseCourseApproval?userId=<%= userId %>">Student </a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
            <div class="col-lg-9 enrollment-part">
                <!-- Content for the enrollment part goes here -->
                <h2 class="header-title text-center" style="background-color: #007bff; color: #ffffff;">Pending Course Registration</h2>
                <form id="course-selection-form" action="/teacherSide/courseApproval" method="POST">
                    <table class="table custom-table">
                        <thead>
                            <tr>
                                <th>Course Code</th>
                                <th>Title</th>
                                <th>Credit</th>
                                <th>Student Roll</th>
                                <th>Level</th>
                                <th>Term</th>
                                <th>Approve</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>hi</td>
                                <td>hi</td>
                                <td>hi</td>
                                <td>hi</td>
                                <td>hi</td>
                                <td>hi</td>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-outline-success">Approve</button>
                                        <button type="button" class="btn btn-outline-danger">Reject</button>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <input type="hidden" name="userId" value="<%= userId %>">
                    <button type="button" id="approveAllButton" class="btn btn-primary">Approve All</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        // JavaScript code for approving all courses
        const approveAllButton = document.getElementById('approveAllButton');
        approveAllButton.addEventListener('click', function () {
            const approveButtons = document.querySelectorAll('.btn-outline-success');
            approveButtons.forEach(button => button.click());
        });
        const approveButtons = document.querySelectorAll('.approve-btn');
        const rejectButtons = document.querySelectorAll('.reject-btn');

        approveButtons.forEach(button => {
            button.addEventListener('click', function () {
                const row = this.closest('tr');
                row.classList.add('approved');
            });
        });

        rejectButtons.forEach(button => {
            button.addEventListener('click', function () {
                const row = this.closest('tr');
                row.classList.add('rejected');
            });
        });
    </script>
</body>

</html>
