<!DOCTYPE html>
<html lang="en">
<head>
    <title>EDUCATION MOODLE (Edu-Mo)</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            font-family: 'Nunito', 'sans-serif';
            background-color: #f4f7fc;
            color: #09090a;
        }
        .bg-primary {
            background-color: #007bff !important; /* Bootstrap primary color */
        }
        .navbar-light .navbar-nav .nav-link {
            color: rgb(230, 115, 8); /* Black color for nav link */
            text-align: left;
        }
        .navbar-light .navbar-nav .nav-link:hover {
            color: #a1560f;
             /* Darker color on hover */
        }
        .navbar-light .navbar-nav .nav-link {
                font-size: 21px;
            }
        .navbar-light .navbar-nav .nav-item {
            background-color: white; /* White background for nav item */
            border-radius: 0.25rem;
            margin-bottom: 10px;
            transition: background-color 0.3s;
        }
        .navbar-light .navbar-nav .nav-item:hover {
            background-color: #f8f9fa; /* Lighter color on hover */
        } 
        .nav-link-collapse {
            background-color: transparent; /* No background color */
            border: none;
        }
        .collapse > ul > .nav-item {
            padding-left: 20px; /* Indent sub-menu items */
            text-align: left;
        }
        .active {
            background-color: #b8daff !important; /* Active item color */
            color: #ededee !important; /* Active item text color */
        }
        .footer {
            background-color: #007bff; /* Same as the header */
            color: white;
            text-align: center;
            padding: 10px 0;
            position: relative; /* Changed from fixed to relative */
            width: 100%;
        }
        /* Custom styling for the selection form */
        .selection-form {
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
        }
        .selection-form label {
            font-weight: bold;
        }
        .selection-form select {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            border: 1px solid #ced4da;
            border-radius: 5px;
            background-color: #f8f9fa;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }
        .selection-form select:focus {
            border-color: #80bdff;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }
        .selection-form .btn-primary {
            width: 100%;
            margin-top: 15px;
        }
        /* Custom styling for the alternate selection bar */
        .alternate-selection-bar {
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
            display: none; /* Initially hidden */
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header Section -->
        <div class="row bg-primary p-5 text-white">
            <div class="col-12">
                <h1>Edu-Mo</h1>
            </div>
        </div>

        <!-- Main Content Section -->
        <div class="row">
            <!-- Sidebar -->
            <div class="col-lg-3">
                <nav class="navbar navbar-expand-sm navbar-light">
                    <div class="container-fluid">

                        <ul class="navbar-nav flex-column">
                            <!-- Add Section with corrected IDs -->
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="collapse" href="#personalOptions">Information</a>
                                <div class="collapse" id="personalOptions">
                                    <ul class="navbar-nav flex-column ms-3">
                                        <li class="nav-item">
                                            <a class="nav-link" href="/studentSide/personalInfo?userId=<%= userId %>">Personal Information</a> 
                                        </li>
                                    </ul>
                                </div>
                            </li>

                            <!-- Show Information Section with unique ID -->
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="collapse" href="#enrollmentOptions">Enrollment</a>
                                <div class="collapse" id="enrollmentOptions">
                                    <ul class="navbar-nav flex-column ms-3">
                                        <li class="nav-item">
                                            <a class="nav-link" href="/studentSide/enrollment?userId=<%= userId %>">Registration</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/studentSide/addCourse?userId=<%= userId %>">Add Course</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/studentSide/dropCourse?userId=<%= userId %>">Drop Course</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/studentSide/Approval?userId=<%= userId %>">Approval</a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            <!-- Other nav items -->

                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="collapse" href="#resultOptions">Result</a>
                                <div class="collapse" id="resultOptions">
                                    <ul class="navbar-nav flex-column ms-3">
                                        <li class="nav-item">
                                            <a class="nav-link" href="/studentSide/selectLevelTerm?userId=<%= userId %>">Result</a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
            <!-- Main Content -->
            <div class="col-lg-9">
                <!-- Alternate Selection Bar (Initially hidden) -->
                <div class="alternate-selection-bar">
                    <p>Please select both a level and a term.</p>
                </div>
                <!-- Selection Form -->
                <div class="selection-form">
                    <form>
                        <div class="form-group">
                            <label for="level">Level:</label>
                            <select class="form-control" id="level">
                                <option value="">Select Level</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="term">Term:</label>
                            <select class="form-control" id="term">
                                <option value="">Select Term</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                            </select>
                        </div> 
                        <button id="goToNextPageBtn" class="btn btn-primary">Show</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Footer Section -->
        <div class="row">
            <div class="col-12 footer">
                <hr>
                <p>Copyright@2023</p>
            </div>
        </div>
    </div>
<script>
    document.addEventListener('DOMContentLoaded', function() {
    document.getElementById('goToNextPageBtn').addEventListener('click', function(event) {
        event.preventDefault(); // Prevent the default form submission behavior
        var level = document.getElementById('level').value;
        var term = document.getElementById('term').value;
        var alternateSelectionBar = document.querySelector('.alternate-selection-bar');
        if (level !== "" && term !== "") {
            // If both level and term are selected, redirect to the result page
            window.location.href = '/studentSide/result?userId=<%= userId %>&level=' + encodeURIComponent(level) + '&term=' + encodeURIComponent(term);
        } else {
            // If either level or term is not selected, show the alternate selection bar
            alternateSelectionBar.style.display = 'block';
            // Hide the alternate selection bar after 5 seconds (optional)
            setTimeout(function() {
                alternateSelectionBar.style.display = 'none';
            }, 5000);
        }
    });
});
</script>
   
    
    
</body>
</html>